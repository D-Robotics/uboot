/dts-v1/;

#include "hobot-x3.dtsi"

/ {
	model = "Hobot X3 Soc Board";
	compatible = "hobot,x3";

	aliases {
		serial0 = &uart0;
		spi0	= &qspi;
		gmac0 	= &gmac;
		bif	= &bifsd;
		mmc0    = &sdio0;
		mmc1   	= &sdio1;
		mmc2   	= &sdio2;
		i2c0	= &i2c0;
		i2c1	= &i2c1;
		i2c2	= &i2c2;
		i2c3	= &i2c3;
		i2c4	= &i2c4;
		i2c5	= &i2c5;
	};

	chosen {
		bootargs = "";
//		stdout-path = "serial0:921600n8";
	};

	memory@0 {
		device_type = "memory";
		reg = <0x0 0x0 0x0 0x80000000>;
	};

	gpio: gpio@a6003000 {
		compatible = "hobot,x2-gpio-1.0";
		status = "okay";
		#gpio-cells = <0x2>;
		reg = <0x0 0xa6003000 0x0 0x100>;
	};

};

&uart0 {
	status = "okay";
};

&i2c0 {
	status = "okay";
};

&i2c1 {
	status = "okay";
};

&i2c4 {
	status = "okay";
};

&i2c5 {
	status = "okay";
};

&qspi {
	status = "disabled";
	spi-max-frequency = <500000000>;
	#address-cells = <1>;
	#size-cells = <0>;

	flash0: gd25q256c@0 {
		u-boot,dm-pre-reloc;
		compatible = "spi-flash";
		reg = <0x0>;
		spi-tx-bus-width = <4>;
		spi-rx-bus-width = <4>;
		spi-max-frequency = <50000000>;
	};


	spi-nand@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "spi-nand";
		reg = <0x0>;
		spi-tx-bus-width = <4>;
		spi-rx-bus-width = <4>;
		spi-max-frequency = <50000000>;
	};

};

&gmac {
        status = "okay";
        #address-cells = <0x1>;
        #size-cells = <0x0>;
        phyaddr = <0xe>; //for dvb
        #phyaddr = <0x0>; //for cvb

	phy-mode = "rgmii";
	phy0: ethernet-phy@0 {
		compatible = "marvell,88E1512","ethernet-phy-ieee802.3-c22";
		reg = <0x0>;
	};
};

&bifsd {
	status = "okay";
};

&sdio0 {
	status = "okay";
};

&sdio1 {
	status = "okay";
};

&sdio2 {
	status = "disabled";
};
